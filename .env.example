# App Configuration
NEXT_PUBLIC_APP_NAME="NotionStruct"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Supabase (Required)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Notion OAuth (Optional - for user workspace integration)
# Create OAuth integration at: https://www.notion.so/my-integrations
NOTION_CLIENT_ID="your-notion-client-id"
NOTION_CLIENT_SECRET="your-notion-client-secret"
NOTION_REDIRECT_URI="http://localhost:3000/api/auth/notion"

# Notion Admin API (Required for AI template generation)
# Create an INTERNAL integration at: https://www.notion.so/my-integrations
# Then share a "Template Gallery" page with the integration
NOTION_ADMIN_TOKEN="secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NOTION_GALLERY_PAGE_ID="your-page-id-here"

# Razorpay (Optional - for payments)
# Get from: https://dashboard.razorpay.com/app/keys
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxx"
RAZORPAY_KEY_SECRET="your-razorpay-secret"

# OpenAI (Optional - for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-xxxxx"

# Email (Optional - for transactional emails)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxx"

# Monitoring (Optional)
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"

# Bartlabs Ecosystem (Optional)
BARTLABS_APP_SECRET="your-shared-secret"
BARTLABS_PAYMENT_URL="https://payments.bartlabs.in"

# Admin Dashboard
# The email that has full admin access
ADMIN_EMAIL="biplavsoccer007@gmail.com"
# Fallback password for quick access (deprecated, use ADMIN_EMAIL instead)
NEXT_PUBLIC_ADMIN_PASSWORD="admin123"
